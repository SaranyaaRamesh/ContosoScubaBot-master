<?xml version="1.0" encoding="utf-16" ?>
@model ContosoScuba.Bot.Models.WildlifeData
 
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <Version Major="1" Minor="0" />
    <Container>
        <TextBlock Size="Default" Weight="Bolder" Wrap="true">@Model.Introduction</TextBlock>
        <TextBlock Size="Default">@Model.Instructions</TextBlock>
    </Container>

    <ImageSet ImageSize="Medium">
        @foreach (var image in Model.Images)
        {
            <Image Url="@image.ImageUrl">
                <AdaptiveOpenUrlAction Type="OpenUrl" Url="@image.OpenUrl" />
            </Image>            
        }
    </ImageSet>

</Card>
